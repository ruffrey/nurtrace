# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
max_line_length = 100
indent_style = space

[*.{js,scss,less,css,jade,json,html}]
indent_size = 4

[package.json]
indent_size = 2

[*.go]
indent_style = tab
indent_size = 8

[Makefile]
indent_style = tab
indent_size = 4

[.git/COMMIT_EDITMSG]
max_line_length = 72
